{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mac Configurator Settings Schema",
  "description": "Defines all available settings for Mac system configuration",
  "type": "object",
  "properties": {
    "settings": {
      "type": "object",
      "properties": {
        "wifi_enabled": {
          "type": "boolean",
          "title": "WiFi Enabled",
          "description": "Enable or disable WiFi",
          "category": "Network",
          "handler": "WiFiHandler",
          "requires_admin": true
        },
        "audio_input_muted": {
          "type": "boolean",
          "title": "Audio Input Muted",
          "description": "Mute or unmute the microphone",
          "category": "Audio",
          "handler": "AudioInputHandler",
          "requires_admin": false
        },
        "audio_output_volume": {
          "type": "integer",
          "title": "Audio Output Volume",
          "description": "Set the system volume level",
          "category": "Audio",
          "handler": "AudioOutputHandler",
          "requires_admin": false,
          "minimum": 0,
          "maximum": 100
        },
        "dock_autohide": {
          "type": "boolean",
          "title": "Dock Auto-hide",
          "description": "Automatically hide and show the Dock",
          "category": "Dock",
          "handler": "DockHandler",
          "requires_admin": false
        },
        "dock_position": {
          "type": "string",
          "title": "Dock Position",
          "description": "Position of the Dock on screen",
          "category": "Dock",
          "handler": "DockHandler",
          "requires_admin": false,
          "enum": ["left", "bottom", "right"]
        },
        "finder_show_hidden": {
          "type": "boolean",
          "title": "Finder Show Hidden Files",
          "description": "Show hidden files in Finder",
          "category": "Finder",
          "handler": "FinderHandler",
          "requires_admin": false
        },
        "finder_show_extensions": {
          "type": "boolean",
          "title": "Finder Show Extensions",
          "description": "Show all file extensions in Finder",
          "category": "Finder",
          "handler": "FinderHandler",
          "requires_admin": false
        },
        "screenshot_location": {
          "type": "string",
          "title": "Screenshot Location",
          "description": "Default save location for screenshots",
          "category": "System",
          "handler": "SystemHandler",
          "requires_admin": false,
          "format": "path"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["settings"],
  "additionalProperties": false
}
